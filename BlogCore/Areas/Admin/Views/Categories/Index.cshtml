@{ 
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary"> Lista de categorías</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary"> Crear nueva categoría</a>
        </div>
    </div>

    <br />
    <br />
    <table id="tblCategorias" class="tabled table-striped table-bordered" style="width:100%;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Estado</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>
@section scripts {
    <script src="~/js/categoria.js"></script>
}

